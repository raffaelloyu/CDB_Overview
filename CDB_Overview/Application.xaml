<Application x:Class="Application"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:aa="clr-namespace:CDB_Overview"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml"
ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Shared.xaml" />
                <ResourceDictionary Source="Resources\Button.xaml" />
                <ResourceDictionary Source="Resources/DataGrid.xaml"/>
                <ResourceDictionary Source="Resources/Dark.xaml"/>
                <ResourceDictionary Source="Resources/DataGrid.Generic.xaml"/>
                <ResourceDictionary Source="Resources/ArrowSymbols.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <aa:FormattingConverter x:Key="FormattingConverter"/>
            <aa:BGNumberConverter x:Key="BGNumberConverter"/>
            <aa:SalesGasConverter x:Key="SalesGasConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
